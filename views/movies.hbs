<div class="container">

    <h1>Movies</h1>

    <hr>
    <div class="row">

        {{#each movies}}
        <div class="col-4">
            <div class="card" style="width: 25rem;">
                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title"><strong>NAME: </strong> {{title}}</h5>
                    <p class="text-center"><a href="/movie/{{id}}" class="btn btn-dark">See more</a></p>
                </div>
            </div>
        </div>
        {{/each}}

    </div>

    <hr>

    <a href="/" class="btn btn-dark mt-3 mb-5">Home</a>

</div>